.list {
    display: flex;
    flex-direction: column;
    align-items: center;
    /* background-color: #f5f5f5; */
    margin-top: 100rpx;
}

.title {
    width: 106rpx;
    height: 34rpx;
    margin-top: 40rpx;
}

.booklist {
    display: flex;
    margin-top: 40rpx;
    flex-wrap: wrap;
    padding: 0 90rpx;
    justify-content: space-between;
}

.book {
    margin-bottom: 50rpx;
}

.book {
    /* display: flex; */
    position: relative;
    box-shadow: 2px 2px 3px #eee;
    /* flex-direction: column; */
    width: 240rpx;
    height: 360rpx;
}

.book-image {
    width: 100%;
    height: 100%;
    border-radius: 4rpx;
}

.book-description {
    box-sizing: border-box;
    width: 100%;
    position: absolute;
    bottom: 0;
    background-color: #fff;
    padding: 5rpx 10rpx 8rpx 15rpx;
    font-size: 24rpx;
    display: flex;
    flex-direction: column;
    border-radius: 0 0 4rpx;
}

.book-title {
    margin-top: 10rpx;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}

.book-author {
    font-size: 20rpx;
    color: #999;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}

.book-footer {
    margin-top: 10rpx;
    font-size: 20rpx;
    color: #999;
    text-align: right;
}
