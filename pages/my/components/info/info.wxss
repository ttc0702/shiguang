@import "/assets/iconfont/iconfont.wxss";

.info {
    position: relative;
    height: 573rpx;
}

.info-bg {
    width: 100%;
    height: 100%;
}

.avatar {
    position: absolute;
    top: 255rpx;
    left: 315rpx;
}

.avatar-button {
    padding: 0;
    border: none !important;
    border-radius: 50%;
}

.avatar-img, .default-img {
    display: block;
    overflow: hidden;
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
}

.info-container {
    position: absolute;
    width: 100%;
    left: 0;
    bottom: 50rpx;
    display: flex;

}

.info-about, .info-booklist {
    width: 50%;
    display: flex;
    flex-direction: column;
    align-items: center;
    font-size: 28rpx;
}

.icon-about {
    font-size: 36rpx;
}

.text {
    margin-top: 10rpx;
    color: #999;
}

