@import "/assets/iconfont/iconfont.wxss";

.header {
    display: flex;
    width: 100%;
    height: 100rpx;
    align-items: center;
    /* justify-content: space-between; */
    border-top: 1px solid #f5f5f5;
    border-bottom: 1px solid #f5f5f5;
}

.episode {
    margin-left: 20rpx;
    margin-top: 4rpx;
    height: 60rpx;
    display: inline-flex;
}

.episode-container {
    /* 这里由于父元素设置了 flex，所以即使设置为 flex 也是行内元素。 */
    display: flex; 
    align-items: baseline;
}

.episode-plain {
    font-size: 32rpx;
}

.episode-index {
    font-size: 60rpx;
    line-height: 60rpx;
    font-weight: bold;
}

.episode-line {
    height: 44rpx;
    margin-left: 14rpx;
    border-left: 1px solid #000;
}

.episode-date {
    display: flex;
    flex-direction: column;
    margin-left: 14rpx;
    margin-top: 8rpx;
}

.episode-month {
    font-size: 24rpx;
    line-height: 24rpx;
}

.episode-year {
    font-size: 20rpx;
}

.like {
    margin-top: 6rpx;
    margin-left: 330rpx;
}

.button {
    margin-left: 20rpx;
    padding: 0;
    border: none !important;
}
