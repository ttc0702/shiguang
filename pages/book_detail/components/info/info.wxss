.info {
    margin-top: 20rpx;
    margin-bottom: 100rpx;
    background-color: #fff;
}

.info-title {
    padding-top: 20rpx;
    text-align: center;
    font-size: 30rpx;
    font-weight: bold;
    color: #2f2f2f;
}

.info-container {
    display: flex;
    width: 630rpx;
    padding: 20rpx 60rpx;
    font-size: 24rpx;
    line-height: 40rpx;
}

.info-name, .info-content {
    display: flex;
    flex-direction: column;
}

.info-name {
    align-items: flex-end;
    color: #999;
}

.info-content {
    margin-left: 20rpx;
    align-items: flex-start;
    color: #666;
}



