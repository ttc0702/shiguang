@import "/assets/iconfont/iconfont.wxss";

.post {
    position: fixed;
    bottom: 0;
    width: 690rpx;
    padding: 0 30rpx;
    background-color: #fff;
    z-index: 10;
}

.post-comments {
    padding: 20rpx 0 10rpx;
    display: flex;
    flex-wrap: wrap;
    align-items: center;
}

.comments-tag {
    margin-right: 15rpx;
    margin-bottom: 10rpx;
}

.nums {
    margin-left: 10rpx;
    font-size: 22rpx;
    color: #aaa;
}
.ex-tag1 {
    background-color: #ffdfdf !important;
}

.ex-tag2 {
    background-color: #fdf7c7 !important;
}

.post-container {
    height: 100rpx;
    display: flex;
    align-items: center;
    border-top: 1px solid #999;
}

.post-input {
    width: 600rpx;
    height: 60rpx;
    padding-left: 30rpx;
    background-color: #eee;
    border-radius: 30rpx;
    font-size: 28rpx;
}

.icon-send {
    margin-left: 20rpx;
    color: #bbb;
}

.enabled {
    color: #e52346;
}

.mask {
    position: fixed;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: #000;
    opacity: .5;
    z-index: 5;
}

.post-empty {
    width: 690rpx;
    text-align: center;
    font-size: 28rpx;
    color: #999;
}

