.cover {
    background-color: #fff;
    padding-top: 30rpx;
    padding-bottom: 30rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.cover-img {
    width: 200rpx;
    height: 300rpx;
    box-shadow: 2px 2px 3px #e3e3e3;
}

.cover-title {
    margin-top: 20rpx;
    font-size: 38rpx;
    font-weight: bold;
    columns: #2f2f2f;
}

.cover-author {
    margin-top: 10rpx;
    font-size: 28rpx;
    color: #999;
}

