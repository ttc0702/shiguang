@import "/assets/iconfont/iconfont.wxss";

.header {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100rpx;
    border-top: 1px solid #f5f5f5;
    border-bottom: 1px solid #f5f5f5;
    display: flex;
    justify-content: center;
    align-items: center;
    box-shadow: 0 2rpx 2rpx #eee;
    z-index: 2;
    background-color: #fff;
}

.header-input {
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 34rpx;
    background-color: #f5f5f5;
    width: 690rpx;
    height: 68rpx;
    color: #999;
}

.header-placeholder {
    margin-left: 10rpx;
    font-size: 28rpx;
}